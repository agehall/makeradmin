FROM python:3.10-alpine

RUN apk update \
    && apk add \
        bash \
        netcat-openbsd \
        less \
        curl \
        build-base \
        python3-dev \
        libffi-dev \
        libressl-dev \
       linux-headers \
    && rm -rf /var/cache/apk/*

RUN mkdir -p /work/

WORKDIR /work

COPY requirements.txt .

RUN pip install -r requirements.txt

COPY test_run.sh .

COPY src ./src
